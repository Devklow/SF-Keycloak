            {
                'title':'Titre random',
                'link':'nothing',
                'icon':'fa-solid fa-user'
            }]
        %}
        {% for menu in menulist %}
            <li class="nav-item w-100">
                <a href="{{ path(menu.link) }}"
                   class="nav-link {{ app.request.get('_route') == menu.link ? 'active' : 'text-white' }}"
                   aria-current="page">
                    <i class="{{ menu.icon }}"></i>&nbsp;
                    <use xlink:href="{{ path(menu.link) }}"></use>
                    <span class="d-none d-sm-inline">{{ menu.title }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
