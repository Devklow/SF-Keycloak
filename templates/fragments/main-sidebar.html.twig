{% set main_menu = [
    {
        'title': 'Accueil',
        'route': 'homepage',
        'icon': 'fas fa-home',
    },
    {
        'title': 'Profil',
        'route': 'profil',
        'icon': 'fas fa-user',
    },
    {
        'title': 'Administration',
        'route': 'admin',
        'icon': 'fas fa-cog',
    },

] %}

