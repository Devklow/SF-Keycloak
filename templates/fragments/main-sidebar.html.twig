                        <a href="{{ path(item.route) }}" class="nav-link {{ active }}">
                            <i class="nav-icon {{ item.icon }}"></i>
                            <p>{{ item.title }}</p>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
