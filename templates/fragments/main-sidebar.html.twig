    <a href="{{ path('homepage') }}" class="brand-link logo-switch d-flex align-items-center justify-content-center p-0">
        <img src="{{ asset("images/ucbl-long.png") }}" alt="UCBL Logo" class="p-0 img-circle app-logo logo-xl">
        <div class="position-relative" style="height: 100px"></div>
